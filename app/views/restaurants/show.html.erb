<div class="container"><h1><%= @restaurant.name %></h1>

<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Category:</strong> <%= @restaurant.category %></p>
<p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
<hr>
<h2>Reviews:</h2>
  <% @restaurant.reviews.each do |review| %>
  <li>content: <%= review.content %> rating: <%= review.rating  %></li>
  <% end %>

<br>
<%= simple_form_for [@restaurant, @review] do |f| %>
<%= f.input :content, as: :text %>
<%= f.input :rating, as: :integer %>
<%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
<%= link_to 'Home', restaurants_path, class: "btn btn-primary" %>
</div>
